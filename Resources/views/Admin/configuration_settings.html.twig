{% extends '@UnicatModule/Admin/_layout.html.twig' %}

{% block title %}{{ 'Settings'|trans }} / {{ parent() }}{% endblock %}

{% block content %}

<div class="box box-primary">
    <div class="box-header with-border">

        {% include '@UnicatModule/help/settings.html.twig' %}

        <h2>{{ 'Configuration settings'|trans }}: {{ configuration.name }}</h2>

        {% if configuration.mediaCollection is not empty %}
            <p><b>Медиаколлекция</b>: <a href="{{ path('cms_admin_config_media_edit_collection', {'id': configuration.mediaCollection.id}) }}">{{ configuration.mediaCollection }}</a></p>
        {% endif %}

        {{ form(form, {'attr':{'class':'form-horizontal well'}}) }}

    </div>
</div>

{% endblock content %}
