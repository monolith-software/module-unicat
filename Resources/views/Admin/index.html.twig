{% extends '@CMS/admin.html.twig' %}

{% block title %}{{ 'Unicat'|trans }} / {{ parent() }}{% endblock %}

{% block page_header 'Unicat'|trans %}
{% block page_description 'Module'|trans %}
{% block content_header 'Unicat configurations'|trans %}

{% block content_body %}

    <table class="table table-bordered table-hover">
        <thead><tr>
            <th style="width: 1%;">id</th>
            <th>{{ 'Title'|trans }}</th>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Entities namespace'|trans }}</th>
            <th>{{ 'Created at'|trans }}</th>
        </tr></thead>
        <tbody>
        {% for item in configurations %}
            <tr>
                <td>{{ item.id }}</td>
                <td><a href="{{ path('unicat_admin.configuration', {'configuration': item.name}) }}">{{ item.title }}</a></td>
                <td><a href="{{ path('unicat_admin.configuration', {'configuration': item.name}) }}">{{ item.name }}</a></td>
                <td>{{ item.entitiesNamespace }}</td>
                <td>{{ item.createdAt|format_date() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@CMS/Form/default.html.twig' %}

{% endblock content_body %}
