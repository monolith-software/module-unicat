{% form_theme form_properties '@CMS/Form/bootstrap_wide.html.twig' %}
{{ form_widget(form_properties) }}

<style type="text/css" media="screen">
    .ace_editor * {
        font-family: consolas, Courier, monospace;
        font-size: 14px;
    }

    #ace_params_yaml,
    #monolith_unicat_node_properties_params
    {
        font-family: consolas, Courier, monospace;
        font-size: 14px;
        width: 100%;
        height: 200px;
    }
</style>

<script src="{{ asset('bundles/felib/ace/ace.js') }}" type="text/javascript" charset="utf-8"></script>
<script>
document.addEventListener("DOMContentLoaded", function(event) {
    $('#monolith_unicat_node_properties_params_control_group > .controls').append('<div id="ace_params_yaml" />');
    var editor = ace.edit("ace_params_yaml");
    var textarea = $('#monolith_unicat_node_properties_params').hide();
    editor.setTheme("ace/theme/github");
    editor.getSession().setMode("ace/mode/yaml");
    editor.getSession().setValue(textarea.val());
    editor.getSession().on('change', function(){
        textarea.val(editor.getSession().getValue());
    });
});
</script>
